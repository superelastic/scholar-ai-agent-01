# Scholar AI Agent Configuration
# Copy this to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=50

# LLM Configuration
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Google Scholar Settings
SCHOLAR_MAX_RESULTS=20
SCHOLAR_YEAR_FILTER=2

# Logging
LOG_LEVEL=INFO